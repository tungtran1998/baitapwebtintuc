@model DVCP.ViewModel.infoViewModel
@{
    ViewBag.Title = "Sửa thông tin website";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Content/ckeditor/ckeditor.js"></script>
<div class="container-fluid" style="margin-top:15px;padding-top:15px;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Tên website ( tiêu đề trang chủ): ", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.web_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.web_name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Mô tả ngắn của web", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.web_des, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.web_des, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nội dung mô tả về Web (ĐVCP):", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.web_about, new { @class = "form-control", required = "true" })
                    @Html.ValidationMessageFor(model => model.web_about, "", new { @class = "text-danger" })
                </div>
            </div>
            <script>
                var editor = CKEDITOR.replace('web_about', { width: '100%', height: '450' });
            </script>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Sửa" class="btn btn-info" />
                </div>
            </div>
        </div>
    }
</div>