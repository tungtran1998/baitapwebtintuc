@model PagedList.PagedList<DVCP.ViewModel.lstPostViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title =  String.IsNullOrEmpty(ViewBag.stitle) ? "Kết quả tìm kiếm " : ViewBag.stitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    GetData data = new GetData();
    string tt = String.IsNullOrWhiteSpace(ViewBag.stitle) ? "" : "CHO: " + ViewBag.stitle;
}

<div class="row">
    <div class="col-12">
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <!--KHU VỰC TÌM KIẾM-->
                        @Html.Partial("_Search", new DVCP.ViewModel.SearchViewModel())
                        <!--kết thúc tìm kiếm-->

                        <h4 class="p-title ml-md-1 pt-4"><b>KẾT QUẢ TÌM KIẾM @tt.ToUpper()</b></h4>
                        @foreach (var item in Model)
                        {
                            <div class="link row oflow-hidden pos-relative mb-md-2 mb-1 dplay-block ml-md-1">
                                <div class="col-md-4 col-12 pl-md-0 pb-sm-2" style="height:auto">
                                    <a href="/bai-viet/@item.slug">
                                        <img src="~/Upload/images/@item.AvatarImage" alt="@item.post_title"
                                             onerror="this.onerror=null;this.src='/Content/web/images/top-post1.jpg';" />
                                    </a>
                                </div><div class="col-md-8 col-12 pt-sm-2 pt-md-0">
                                    <div class="min-h-100x">
                                        <h5> <a class="font-weight-bold" href="/bai-viet/@item.slug">@item.post_title</a></h5>
                                        <p>@(item.post_teaser.Length >= 150 ? item.post_teaser.Substring(0, 150) : item.post_teaser + "..")</p>
                                        @if (!String.IsNullOrWhiteSpace(item.post_review))
                                        {<p>
                                                Review: @item.post_review
                                            </p>
                                        }

                                        <ul>
                                            <li class="latest"><span class="fa fa-calendar mr-1" style="color:#777777"></span>@String.Format("{0:dd-MM-yyyy}", item.create_date)</li>
                                            <li class="latest"><span class="fa fa-tags mr-1" style="color:#777777"></span>@item.tagsname</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                        @{
                            if (Model.PageCount > 1)
                            {
                                <nav aria-label="Page navigation example" style="text-align:center">
                                    @Html.PagedListPager(Model, page => Url.Action("Search", new { page, title = ViewBag.stitle }), new PagedListRenderOptions { UlElementClasses = new string[] { "pagination" }, LiElementClasses = new string[] { "page-item" } })
                                </nav>
                            }
                        }
                    </div>
                    <!-- container -->

                    <div class="col-md-4">
                        <!-- Phổ biến -->
                        @Html.Partial("_PopularPost", data.GetPopularPost())
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

