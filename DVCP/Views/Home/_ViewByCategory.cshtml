@model IEnumerable<DVCP.ViewModel.ViewPostViewModel>
<h4 class="p-title ml-md-1"><b>CHUYÊN MỤC</b></h4>
<div class="row">
    @foreach (var i in Model)
    {
        <div class="col-sm-6">
            <img src="~/Upload/images/@i.AvatarImage" alt="@i.post_title">
            <h4 class="pt-20"><a href="/bai-viet/@SlugGenerator.SlugGenerator.GenerateSlug(i.post_title)-@i.post_id"><b>@i.post_title</b></a></h4>
            <ul class="list-li-mr-20 pt-10 mb-30">
                <li class="color-lite-black">
                    by <a href="#" class="color-black"><b>Olivia Capzallo,</b></a>
                    @String.Format("{0:dd/MM/yyyy}",i.create_date)
                </li>
                <li><i class="color-primary mr-5 font-12 ion-ios-bolt"></i>30,190</li>
                <li><i class="color-primary mr-5 font-12 ion-chatbubbles"></i>47</li>
            </ul>
        </div>

    }

</div>